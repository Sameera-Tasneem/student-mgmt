<h1>Listing students</h1>
<%= link_to 'New Student', new_student_path %>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %> 
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><%= student.phone_number %></td>
            <td><%= link_to 'View', student %></td>
            <td><%= link_to 'Edit', edit_student_path(student) %></td>
            <td><%= link_to "Delete", student, data: 
            { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody> 
</table>
<%# '=' is used in td to display the values. But not in iteration 
because in iteration you are only defining but not displaying %>
